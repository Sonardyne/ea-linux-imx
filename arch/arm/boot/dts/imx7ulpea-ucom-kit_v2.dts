&qspi1 {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_qspi1_1>;
        status = "okay";

        flash0: mx25u3235f@0 {
                reg = <0>;
                #address-cells = <1>;
                #size-cells = <1>;
                compatible = "macronix,mx25r3235f";
                spi-max-frequency = <29000000>;
        };
};

